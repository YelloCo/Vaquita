<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Directory</th>
      <th>Branch</th>
      <th>Frequency</th>
      <th>Time</th>
      <th>Last commit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.git_dir %></td>
        <td><%= repository.branch %></td>
        <td><%= repository.frequency.capitalize %></td>
        <td><%= repository.time %></td>
        <td><%= repository.last_commit&.slice(0..9) || 'N/A' %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td>
        <%= link_to  repository, method: :delete, data: { confirm: 'Are you sure?' } do |link| %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Repository', new_repository_path, class: :button %>
