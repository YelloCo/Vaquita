<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'new-user' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, class: 'input' %>
      <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
    </div>
  </div>

  <br >

  <div class="actions">
    <%= f.submit 'Send reset password instructions', class: 'button is-primary' %>
  </div>
<% end %>

<br> 

<%= render "devise/shared/links" %>
