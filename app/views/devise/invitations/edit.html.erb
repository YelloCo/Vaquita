<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, class: 'edit-user' } do |f| %>
  <%= f.hidden_field :invitation_token %>

  <% if f.object.class.require_password_on_accepting %>
    <p>
      <%= f.label :password, class: :label %>
      <%= f.password_field :password, class: :input %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </p>
    <br />
    <p>
      <%= f.label :password_confirmation, class: :label %>
      <%= f.password_field :password_confirmation, class: :input %>
    </p>
  <% end %>
  <br />
  <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'button is-primary' %></p>
<% end %>
